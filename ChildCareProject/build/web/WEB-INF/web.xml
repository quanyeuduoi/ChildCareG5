    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostManagementControll</servlet-name>
        <url-pattern>/ManagePost</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
