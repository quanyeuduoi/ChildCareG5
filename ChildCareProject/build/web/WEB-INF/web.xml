    <servlet>
        <servlet-name>PostControl</servlet-name>
        <servlet-class>control.PostControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CChangePasswordControl</servlet-name>
        <servlet-class>control.CChangePasswordControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartmentControl</servlet-name>
        <servlet-class>control.DepartmentControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartmentDetail</servlet-name>
        <servlet-class>control.DepartmentDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostManagementControll</servlet-name>
        <servlet-class>control.PostManagementControll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlServlet</servlet-name>
        <url-pattern>/ControlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetPassControl</servlet-name>
        <url-pattern>/ForgetPassControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentControl</servlet-name>
        <url-pattern>/PaymentControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutControl</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
