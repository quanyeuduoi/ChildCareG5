        <servlet-class>Test.ControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgetPassControl</servlet-name>
        <servlet-class>control.ForgetPassControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentControl</servlet-name>
        <servlet-class>control.PaymentControl</servlet-class>
