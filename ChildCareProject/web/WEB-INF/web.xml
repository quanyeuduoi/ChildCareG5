<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControlServlet</servlet-name>
        <servlet-class>Test.ControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userDetail</servlet-name>
        <servlet-class>control.userDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostControl</servlet-name>
        <servlet-class>control.PostControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>postDetail</servlet-name>
        <servlet-class>control.postDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>control.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartmentControl</servlet-name>
        <servlet-class>control.DepartmentControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartmentDetail</servlet-name>
        <servlet-class>control.DepartmentDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CChangePasswordControl</servlet-name>
        <servlet-class>control.CChangePasswordControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServiceControl</servlet-name>
        <servlet-class>control.SearchServiceControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>control.HomeControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlServlet</servlet-name>
        <url-pattern>/ControlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userDetail</servlet-name>
        <url-pattern>/userDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostControl</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>postDetail</servlet-name>
        <url-pattern>/postDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartmentControl</servlet-name>
        <url-pattern>/department</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartmentDetail</servlet-name>
        <url-pattern>/departmentDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CChangePasswordControl</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServiceControl</servlet-name>
        <url-pattern>/searchService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/HomeControl</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
